<!DOCTYPE html>
<html>
  <head>
    <title>Sean's TTS Final</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag   'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


    <nav class="navbar navbar-expand-xl justify-content-between navbar-light bg-dark">
      
        <ul class="navbar-nav w-100">
            <li class="nav-item active">
            <a class="nav-link text-light" href=<%= root_path %>><i class="fas fa-home"></i> Home <span class="sr-only">(current)</span></a>
          </li>

          <li class="nav-item">
            <a class="nav-link text-light" href=<%= new_post_path %>><i class="fas fa-pencil-alt"></i> Create Post </a>
          </li>

          <li class="nav-item">
            <a class="nav-link text-light" href=<%= posts_path %>><i class="fas fa-chalkboard-teacher"></i> My Posts </a>
          </li>

        
        
          <li class="nav-item dropdown ml-auto">
            <% if user_signed_in? %>

                <div class="btn-group">
                  <button type="button" class="btn btn-light"><%= current_user.email %></button>
                  <button type="button" class="btn btn-light dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="sr-only">Toggle Dropdown</span>
                  </button>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                      <a class="dropdown-item" href=<%= edit_user_registration_path %>>Edit Profile</a>
                      <div class="dropdown-divider"></div>
                      <a class="dropdown-item" href=<%= destroy_user_session_path %> data-method="delete">Sign Out</a>
                  </div>
                </div>

                                     
                  
              <% else %>

                  <a class="btn btn-success btn-sm" href=<%= new_user_session_path %>>Sign In</a>
                  <a class="btn btn-info btn-sm" href=<%= new_user_registration_path %>>Sign Up</a>

              <% end %>
          </li>

          </ul>
      </nav>


    <div class="container-fluid">
    <%= yield %>

    </div>
  </body>
</html>
